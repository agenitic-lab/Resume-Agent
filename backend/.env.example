# copy this to .env and fill in your values
# don't commit .env to git!

# Database - get connection string from Supabase dashboard
# Format: postgresql://username:password@host:port/database
DATABASE_URL=postgresql://user:password@localhost:5432/resume_agent

# Auth secrets - generate with: openssl rand -hex 32
JWT_SECRET_KEY=your-secret-key-here-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Encryption for storing API keys securely
ENCRYPTION_KEY=your-encryption-key-here-change-in-production

# CORS - allowed frontend origins
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000
ALLOWED_ORIGIN_REGEX=^https?://(localhost|127\.0\.0\.1|0\.0\.0\.0|\[::1\]|192\.168\.\d{1,3}\.\d{1,3}|10\.\d{1,3}\.\d{1,3}\.\d{1,3}|172\.(1[6-9]|2\d|3[0-1])\.\d{1,3}\.\d{1,3})(:\d+)?$

# Groq API - get from console.groq.com/keys (users can provide their own too)
GROQ_API_KEY=your-groq-api-key-here

# which models to use for each step
JOB_REQUIREMENTS_MODEL=llama-3.3-70b-versatile
RESUME_ANALYSIS_MODEL=llama-3.3-70b-versatile
PLANNING_MODEL=llama-3.3-70b-versatile
MODIFICATION_MODEL=llama-3.3-70b-versatile

# llm generation params
DEFAULT_TEMPERATURE=0.2
MAX_TOKENS=4000

# agent behavior tuning
MAX_ITERATIONS=3
TARGET_SCORE=75.0
MIN_ITERATION_GAIN=1.0

# fit thresholds - below 0.25 = reject, 0.25-0.45 = partial fit, 0.45+ = good
FIT_THRESHOLD_POOR=0.25
FIT_THRESHOLD_PARTIAL=0.45

# latex service
LATEX_COMPILE_URL=https://latex.ytotech.com/builds/sync
LATEX_TIMEOUT=30

# app settings
DEBUG=false
LOG_LEVEL=INFO
# For production deployment, use these settings:
#
# DATABASE_URL=postgresql://user:strong_password@prod-db.example.com:5432/resume_agent
# JWT_SECRET_KEY=<generate-with-openssl-rand-hex-32>
# ENCRYPTION_KEY=<generate-with-openssl-rand-hex-32>
# ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
# DEBUG=false
# LOG_LEVEL=WARNING
# LATEX_TIMEOUT=10  # Reduce timeout for better UX
